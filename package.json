{
  "name": "claude-code-best-practices",
  "version": "0.1.0",
  "description": "A production-grade guide and toolkit for mastering Claude Code in professional software development",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:tdd-example": "cd examples/tdd-demo && npm test",
    "test:tdd-coverage": "cd examples/tdd-demo && npm run test:coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:markdown": "markdownlint '**/*.md' --ignore node_modules --ignore examples/tdd-demo/node_modules",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "check:links": "markdown-link-check --config .github/markdown-link-check-config.json README.md docs/*.md CONTRIBUTING.md CHANGELOG.md",
    "spell:check": "cspell '**/*.{md,js,ts}' --no-progress",
    "build": "echo 'No build step required - documentation project'",
    "prepare": "husky install || true",
    "docs:serve": "npx serve docs -p 3000",
    "validate": "npm run lint && npm run format:check && npm run spell:check",
    "ci": "npm run validate && npm run test && npm run test:tdd-example"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "best-practices",
    "tdd",
    "code-review",
    "automation",
    "developer-tools",
    "productivity",
    "nodejs"
  ],
  "author": "Claude Code Best Practices Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/Claude-Code-Best-Practices.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/Claude-Code-Best-Practices/issues"
  },
  "homepage": "https://github.com/yourusername/Claude-Code-Best-Practices#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "markdown-link-check": "^3.12.1",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "examples/**/*.js",
      "!examples/**/node_modules/**",
      "!examples/**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {}
  }
}
